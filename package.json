{
  "name": "move-simulator-vscode",
  "displayName": "move-simulator-vscode",
  "icon": "media/icon.png",
  "publisher": "Movelazy",
  "description": "move with GUI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "move-simulator-vscode.openSimulator",
        "title": "open simulator"
      },
      {
        "command": "move-simulator-vscode.openWebview",
        "title": "open webview"
      }
    ],
   "viewsContainers": {
      "activitybar": [
        {
          "id": "move-simulator",
          "title": "Move Simulator",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "move-simulator": [
        {
          "type": "webview",
          "id": "moveSimulatorView",
          "name": "Move Simulator",
          "icon": "media/logo.svg",
          "contextualTitle": "Move Simulator"
        }
      ]
    }
  },
  "scripts": {
    "install:all": "npm install && cd webview && npm install && npm install vite",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4"
  }
}
